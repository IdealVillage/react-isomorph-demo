@import "../../common/stylus/reset.css";

body {
  background #f5f5f5s;
}

.dl {
  width 50px;
  height 50px;
  background-image url("img/github.png");
  background-size 30px;
  background-position center;
  background-repeat no-repeat;

  position absolute;
  bottom 0;
  right 0;
}

.todo-list-item {
  display flex;
  justify-content: space-between;
  padding: 0 20px;
  margin-bottom: 10px;
}

.title {
  text-align center;
}